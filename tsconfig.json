{
  "compilerOptions": {  
    "target": "es2016",
     "experimentalDecorators": true,                 
     "emitDecoratorMetadata": true,                        
    "module": "commonjs", 
    "baseUrl": "./",
     "paths": {
      "@src/*": ["./src/*"],
      "@entities/*" : ["./src/core/entities/*"],     
      "@contracts/*" : ["./src/core/abstractions/*"],
      "@services/*" : ["./src/services/*"],
      "@non-core-contracts/*" : ["./src/services/abstractions/*"],
      "@data/*" : ["./src/data/*"],
      "@data-contracts/*" : ["./src/data/abstract/*"],
      "@filters/*" : ["./src/filters/*"],
      "@decorators/*" : ["./src/decorators/*"],
      "@exceptions/*" : ["./src/exceptions/*"],
      "@utils/*" : ["./src/utils/*"],
      "@controllers/*" : ["./src/controllers/*"]      
     },                                     
     "rootDirs": ["./src", "./__tests__"],                                 
    
     "declaration": true,                            
     "declarationMap": true,                           
    
     "sourceMap": true,                                 
     "outDir": "./dist", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                    
    "skipLibCheck": true                                 
  }, "exclude": [    
    "jest.config.ts",     
    "coverage", 
    "./dist/**/*"  
    
  ]
}
