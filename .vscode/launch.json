    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Program",
            "skipFiles": [
                "<node_internals>/**"
            ],            
            "runtimeExecutable": "node", 
            "runtimeArgs": ["${workspaceFolder}//dist/Index.js", "--debug", "--dark"]
        }, 

        {
            "type": "node",            
            "request": "launch",
            "name": "Debug some test with ts-jest",
            "skipFiles": [
                "<node_internals>/**"
            ],
            
            "runtimeExecutable": "npx", 
            "runtimeArgs": ["jest",  "./${fileDirnameBasename}/${fileBasename}"], 
            "internalConsoleOptions": "neverOpen", 
            "console": "integratedTerminal"
        }

        
    ]
}